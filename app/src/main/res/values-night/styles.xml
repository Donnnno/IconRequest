<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary">@color/primaryBlack</item>
        <item name="colorPrimaryVariant">@color/primaryDarkBlack</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary</item>
        <item name="colorSecondaryVariant">@color/primaryDark</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
    </style>


    <style name="Base_ToolbarStyle" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="android:background">?colorPrimary</item>
        <item name="titleTextAppearance">@color/white</item>
        <item name="subtitleTextAppearance">@color/white</item>
        <!-- Color used for the title of the Toolbar - as long as not overridden -->
        <item name="android:textColorPrimary">@color/white</item>
        <!-- Used to color back button and three dots -->
        <item name="android:textColorSecondary">@color/white</item>
    </style>
    <style name="PopupMenuListView" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="android:divider">?colorOnPrimary</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:background">@color/black</item>
        <item name="android:buttonTint">?colorOnPrimary</item>
    </style>
</resources>